{
  "functions": {
    "source": "functions",
    "runtime": "nodejs22",
    "predeploy": ["npm --prefix functions run build"],
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "functions/node_modules"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "host": "0.0.0.0",
      "port": 5001
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": 8080
    },
    "auth": {
      "host": "0.0.0.0",
      "port": 9099
    },
    "storage": {
      "host": "0.0.0.0",
      "port": 9199,
      "rules": "storage.rules"
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
